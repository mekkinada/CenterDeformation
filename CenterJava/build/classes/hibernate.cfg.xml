<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/center?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <mapping resource="com/hibernate/entities/CivilState.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Action.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Privilege.hbm.xml"/>
    <mapping resource="com/hibernate/entities/StateGovernorate.hbm.xml"/>
    <mapping resource="com/hibernate/entities/UserLog.hbm.xml"/>
    <mapping resource="com/hibernate/entities/TypeUser.hbm.xml"/>
    <mapping resource="com/hibernate/entities/User.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Locality.hbm.xml"/>
    <mapping resource="com/hibernate/entities/PrivateUser.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Profile.hbm.xml"/>
    <mapping resource="com/hibernate/entities/StateProfile.hbm.xml"/>
    <mapping resource="com/hibernate/entities/CoursesStudents.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Trainer.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Delegation.hbm.xml"/>
    <mapping resource="com/hibernate/entities/StateUsed.hbm.xml"/>
    <mapping resource="com/hibernate/entities/StatePrivilege.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Courses.hbm.xml"/>
    <mapping resource="com/hibernate/entities/StateDelegation.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Country.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Students.hbm.xml"/>
    <mapping resource="com/hibernate/entities/Governorate.hbm.xml"/>
    <mapping resource="com/hibernate/entities/StateLocality.hbm.xml"/>
    <mapping resource="com/hibernate/entities/StateCountry.hbm.xml"/>
    <mapping resource="com/hibernate/entities/PrivilegeProfile.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
